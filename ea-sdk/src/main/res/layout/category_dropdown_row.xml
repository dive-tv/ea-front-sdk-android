<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/carousel_categories_width"
    android:layout_height="@dimen/carousel_categories_dropdown_height"
    android:background="@color/dark_grey_three"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/text1"
        style="@style/Categories_Inactive"
        android:layout_width="@dimen/carousel_categories_width"
        android:layout_height="@dimen/carousel_button_height"
        android:background="@color/dark_grey_three"
        android:gravity="center"
        android:textColor="@drawable/category_selector_txt" />

    <FrameLayout
        android:layout_width="@dimen/carousel_categories_separator_width"
        android:layout_height="@dimen/carousel_categories_separator_height"
        android:layout_gravity="center"
        android:background="@color/dark_grey" />


</LinearLayout>
