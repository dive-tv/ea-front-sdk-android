<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/rimageitems_row_margin_right">

    <FrameLayout
        android:layout_width="@dimen/rimageitems_image_width"
        android:layout_height="@dimen/rimageitems_image_height"
        android:layout_marginBottom="@dimen/rimageitems_separator"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imgv_recommended_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop" />
    </FrameLayout>

</LinearLayout>